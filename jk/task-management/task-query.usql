/** 搜索我的消息*/
QUERY searchMessage()
PAGE (
    id bigint start 0,
    date datetime,
    note text,
    user ID [$user],
    peer ID [$user]
) {
    PAGE select m.id, m.date, m.note, m.user, m.peer
    from    Message as m
