/** 搜索业绩*/
QUERY SearchAchievement (
     user ID [$user]
)
returns ret (
    user ID [$user],
    oneSaleVolume dec(12, 2),
    twoSaleVolume dec(12, 2),
    threeSaleVolume dec(12, 2),
    oneAchievement dec(12, 2),
    twoAchievement dec(12, 2),
    threeAchievement dec(12, 2),
    teamCount bigint,
    customerCount bigint,
    activeCustomerCount bigint
) {
    var teamCount bigint, customerCount bigint, activeCustomerCount bigint;
    set teamCount = ifnull(count(1),0) from Relation where parent=$user;
    set customerCount = ifnull(count(1),0) from MyCustomer where user=$user;
    set activeCustomerCount= ifnull(count(1),0) from CustomerNowSalesBOOK where sales=$user;

    set teamCount = ifnull(teamCount,0);
    set customerCount = ifnull(customerCount,0);
    set activeCustomerCount = ifnull(activeCustomerCount,0);


    var oneSaleVolume dec(12, 2) = 0, twoSaleVolume dec(12, 2) =0, threeSaleVolume dec(12, 2)=0, 
        oneAchievement dec(12, 2)=0, twoAchievement dec(12, 2)=0, threeAchievement dec(12, 2)=0;

    set     oneSaleVolume = a.oneSaleVolume, twoSaleVolume = a.twoSaleVolume, threeSaleVolume = a.threeSaleVolume,
            oneAchievement = a.oneAchievement, twoAchievement = a.twoAchievement, threeAchievement = a.threeAchievement
    from    SalesAchievementBook as a 
    where   a.user = user;

    into ret select user,  oneSaleVolume,  twoSaleVolume,  threeSaleVolume,  oneAchievement,  twoAchievement,  threeAchievement, teamCount, customerCount, activeCustomerCount;
   
};


/** 搜索业绩记录*/
QUERY SearchAchievementHistory (
     types int
)
returns ret (
    date datetime,
    sales ID [$user],
    mycustomer ID MyCustomer,
    Amount dec(12, 2) not null,
    Types int,
    order ID,
    status smallint
) {    
    into ret select a.date, a.sales, a.mycustomer, a.Amount, a.Types, a.order, a.status
    from    AchievementHistory as a
    where   a.sales= $user and a.Types = types and a.Amount <> 0
    order by a.date desc ;
};
 
/** 搜索我的团队*/
QUERY SearchTeam ()
returns ret (
    parent ID [$user],
    children ID [$user],
    parentcode bigint,
    childrencode bigint,
    assigned  char(100)
) {
    into ret select r.parent, r.children, p.code as parentcode, cp.code as childrencode, a.Assigned
    from    Position as p
            join Relation as r on p.user = r.parent
            join Position as cp on cp.user = r.children
            left join PeerAssignedBook as a on a.user = p.user and a.peer = r.children
    where   p.user = $user;
};

/** 搜索我的客户*/
QUERY searchMyCustomer(key char(100))
PAGE (
    id bigint start 0,
    unit ID MyCustomerUnit,
    no char(30),
    name char(50),
    firstName char(50),
    lastName char(50),
    telephone char(20),
    gender char(5),
    birthDay date,
    email char(30),
    wechat char(20),
    teacher char(20),
    potential smallint,
    research smallint,
    salutation char(10),
    createTime date,
    address ID Address,
    addressString char(400),
    IsOccupy smallint
) {
    var key2 char(102);
    set key2 = concat('%', key, '%');
    PAGE select c.id, c.unit, c.no, c.name, c.firstName, c.lastName, c.telephone, c.gender, c.birthDay, c.email, c.wechat,
                c.teacher, c.potential, c.research, c.salutation, c.createTime, c.address, c.addressString, 
                case when  cb.sales = $user or cb.sales is null then 0 else 1 end as IsOccupy
    from    MyCustomer as c
            join MyCustomerUnit as u on c.unit =u.id
            left join CustomerMyCustomerMap as cyc on cyc.mycustomer =c.id
            left join CustomerNowSalesBOOK as cb on cb.customer = cyc.customer
    where   c.id > $pageStart and c.user = $user and (c.name like key2 or u.name like key2 )
    limit $pageSize;
};

/**判断客户是否被占用**/
QUERY MyCustomerIsOccupy(
    mycustomer ID MyCustomer
)
returns ret (
    code smallint
) {
    var telephone char(20), customerId ID, counts int;
    set telephone = telephone from MyCustomer where id = mycustomer limit 1;

    var content ID Contact;
    
    set customerId=b.id 
    from    Customer.Contact as a 
            join Customer as b on a.owner=b.id
    where   a.content=telephone;

    set     counts = count(1) 
    from    CustomerNowSalesBOOK 
    where   customer=customerId and ( sales is null or sales <> $user );
    set counts = ifnull(counts,0);

    if(counts > 0){
       into ret select 1 as code;
    }else{
       into ret select 0 as code;
    }
};

