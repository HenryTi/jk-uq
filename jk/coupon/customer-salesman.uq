IX CustomerBound (
    ix,     -- customer
    xi,     -- salesman webuser
    boundDate   date,
    boundDays   smallint,
);

HISTORY CustomerBoundHistory (
    date,
    customer    ID,
    boundTo    ID,
    operation   tinyint,    -- 1:绑定；0:解绑
);

IX WebUserBound (
    ix,     -- webuser
    xi,     -- salesman webuser
    boundDate   date,
    boundDays   smallint,
);

HISTORY WebUserBoundHistory (
    date,
    webuser    ID,
    boundTo    ID,
    operation   tinyint,    -- 1:绑定；0:解绑
);