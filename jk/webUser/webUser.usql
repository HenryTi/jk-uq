-- WebUser 和 Customer的关联关系
OPEN MAP WebUserCustomer(
    key webUser ID WebUser,
    customer ID Customer,
) ON SAVE {
    if($user > 0) {
        bus webUserBus.WebUserCustomer set webUser = webUser, customer = customer;
    }
};

